# env.local.example — example environment variables for local runs
# Copy to env.local and fill in values. Do NOT commit env.local with secrets.

# MinIO / S3 configuration used by upload_to_minio.py
MINIO_ENDPOINT=127.0.0.1:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=vncredittrust-lake
MINIO_PREFIX=reference/2025-11-16/
MINIO_ROOT_DIR=/path/to/local/data
MINIO_SECURE=false  # true if using https

# Optional: set SOURCE_SYSTEM consumed by generate_metadata
SOURCE_SYSTEM=vncredittrust

# Kafka bootstrap for producer jobs (used by kafka-streaming/source-connector)
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPIC=some-topic

# ClickHouse / S3 sink connector — example placeholders
CLICKHOUSE_HOST=clickhouse-host
CLICKHOUSE_PORT=8123
CLICKHOUSE_USER=default
CLICKHOUSE_PASSWORD=

# Other local developer toggles
LOG_LEVEL=INFO

